{% extends 'base.html.twig' %}

{% block body %}
    <br></<br>

    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>STT</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <th scope="row">{{ product.id }}</th>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.description }}</td>
                    <td> <img src="{{ asset('upload/product image/' ~ product.image) }}" width="250px" height="150px"><td>
                    <td>
                        <a href="{{path('product_details',{'id':product.id})}} " class='btn btn-success'>View</a>
                        <a href="{{ path('product_edit', {'id': product.id})}}" class='btn btn-default'>Edit</a>
                        <a href="{{ path('product_delete', {'id': product.id})}} "class='btn btn-danger'>Delete</a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

