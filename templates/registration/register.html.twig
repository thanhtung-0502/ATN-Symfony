{% block body %}
    <!-- Font Awesome -->
    <link rel="icon" href="{{ asset ('uploads/image/icon.png') }}">
    <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
            rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
            href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
            rel="stylesheet"
    />
    <!-- MDB -->
    <link
            href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.4.0/mdb.min.css"
            rel="stylesheet"
    />
    <!-- MDB -->
    <script
            type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.4.0/mdb.min.js"
    ></script>

    <title>Register</title>

    <!-- Section: Design Block -->
    <section class="text-center text-lg-start" style="background-color: #FFFAF9">
        <style>
            .cascading-right {
                margin-right: -50px;
            }

            @media (max-width: 991.98px) {
                .cascading-right {
                    margin-right: 0;
                }
            }
        </style>

        <!-- Jumbotron -->
        <div class="container py-4 justify-content-center">
            <div class="row mt-5 justify-content-center">
                <div class="col-lg-10">
                    <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
                        <div class="card-body p-5 shadow-5 text-center">

                            <h2 class="row mt-5 justify-content-center">Register</h2>
                            {{ form_start(registrationForm) }}
                            <!-- Email input -->
                            <div class="col-lg-12 justify-content-center">
                                {{ form_row(registrationForm.email, {
                                    label: 'Email'
                                }) }}
                            </div>
                            <br>
                            <!-- Password input -->
                            <div class="col-lg-12 justify-content-center">
                                {{ form_row(registrationForm.plainPassword, {
                                    label: 'Password'
                                }) }}
                            </div>
                            <br>
                            <!-- Checkbox -->
                            <div class="form-check mb-3 text-center" >
                                {{ form_widget(registrationForm.agreeTerms) }}
                                Agree Terms
                            </div>

                            <!-- Submit button -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-dark">
                                    Register
                                </button>
                            </div>
                            <p class="mb-2 pb-lg-2" style="color: #393f81;"> <a href="{{ path ('app_login') }}"
                                                                                                        style="color: #393f81;">Login here</a></p>
                            {{ form_end(registrationForm) }}
                        </div>
                    </div>
                </div>

                <div class="col-lg-5 mb-5 mb-lg-0">

                </div>
            </div>
        </div>
        <!-- Jumbotron -->
    </section>
{% endblock %}
